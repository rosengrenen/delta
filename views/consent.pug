html
  head
    title Consent
  body
    h2 Consent
    form(method="POST" action="/consent")
      input(type="hidden",name="challenge",value=challenge)
      each scope in requestedScopes
        input(type="checkbox",id=scope,value=scope,name="grant_scope")
        label(for=scope)=scope
        br
      div
        input(type="submit" id="accept" name="submit" value="Accept")
      div
        input(type="submit" id="reject" name="submit" value="Reject")